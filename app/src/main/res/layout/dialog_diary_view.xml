<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp"
    android:layout_gravity="center" >

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingHorizontal="2dp"
        android:paddingVertical="2dp"
        android:background="@color/black" >

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/WdiaryViewLayout"
            android:layout_gravity="center"
            android:background="@color/bg_diary" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/WdiaryMoodView"
                    android:layout_marginLeft="6dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_happy" />

                <TextView
                    android:id="@+id/WdiaryDateView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="24dp"
                    android:fontFamily="@font/nanumsquare_acebold"
                    android:textColor="@color/black" />

            </LinearLayout>

            <View
                android:background="@color/black"
                android:layout_width="310dp"
                android:layout_height="5px"
                android:layout_gravity="center"
                android:layout_marginVertical="7dp"/>

            <TextView
                android:id="@+id/WdiaryTitleView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="제목: "
                android:gravity="center"
                android:textSize="24dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/nanumsquare_acebold"
                android:textColor="@color/black" />

            <HorizontalScrollView
                android:id="@+id/WdiaryImagesScrollView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/WdiaryImagesView"
                    android:layout_width="242dp"
                    android:layout_height="242dp"
                    android:orientation="horizontal"
                    android:gravity="left">
                </LinearLayout>

            </HorizontalScrollView>

            <View
                android:id="@+id/WdiaryLine"
                android:background="@color/black"
                android:layout_width="310dp"
                android:layout_height="5px"
                android:layout_gravity="center"
                android:layout_marginVertical="7dp"/>

            <TextView
                android:id="@+id/WdiaryCommentView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:fontFamily="@font/nanumsquare_acebold"
                android:textColor="@color/black"
                android:gravity="center|left"
                android:paddingHorizontal="15dp"/>

            <View
                android:background="@color/black"
                android:layout_width="310dp"
                android:layout_height="5px"
                android:layout_gravity="center"
                android:layout_marginVertical="7dp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>