<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 캘린더 일 스타일 -->
    <style name="CalendarViewDateStyle" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nanumsquare_acebold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더 요일 스타일 -->
    <style name="CalendarViewWeekStyle" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/btn_default</item>
        <item name="fontFamily">@font/nanumsquare_acebold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 연, 월 표시 헤더 스타일 -->
    <style name="CalendarWidgetHeader">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/nanumsquare_acebold</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- 다이어리 검색 창 스타일 -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">18dp</item>
        <item name="android:background">@color/bg_diary</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/nanumsquare_acebold</item>
    </style>
</resources>